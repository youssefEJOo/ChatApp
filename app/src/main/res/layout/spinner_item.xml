<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tooxls="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_spinner"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/sports"
        app:layout_constraintEnd_toStartOf="@id/title_spinner"
        />
    <TextView
        android:id="@+id/title_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_spinner"
        app:layout_constraintTop_toTopOf="@id/image_spinner"
        app:layout_constraintBottom_toBottomOf="@id/image_spinner"
        tooxls:text="Sports"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>